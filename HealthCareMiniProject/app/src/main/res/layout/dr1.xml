<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        android:background="@drawable/custom_edittext">


        <TextView
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:text="Dr. Ananya Sharma(MD)"
            android:textAlignment="center"
            android:textColor="@color/greenx"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:text=" - Specialty:Cardiology"
            android:textAlignment="center"
            android:textColor="@color/greenx"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="284dp"
            android:layout_height="214dp"
            android:text="Dr. Ananya Sharma is a renowned cardiologist with over 15 years of experience in treating heart-related ailments
.Dr. Sharma is known for her expertise in interventional cardiology procedures and has conducted numerous successful angioplasties and bypass surgeries."
            android:textAlignment="center"
            android:textColor="@color/greenx"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>