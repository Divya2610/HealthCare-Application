<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">


            <TextView
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:text="Dr. Priya Kapoor (MS)"
                android:textAlignment="center"
                android:textColor="@color/greenx"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:text=" - Specialty:Obstetrics and Gynecology"
                android:textAlignment="center"
                android:textColor="@color/greenx"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="284dp"
                android:layout_height="190dp"
                android:text="Dr. Priya Kapoor is a distinguished gynecologist known for her care and expertise in women's health,holds a Master of Surgery degree in OBGYN and has been practicing for over 20 years. Dr. Kapoor has a special interest in high-risk pregnancies and has helped numerous women navigate through their pregnancy journey with care and expertise"
                android:textAlignment="center"
                android:textColor="@color/greenx"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>