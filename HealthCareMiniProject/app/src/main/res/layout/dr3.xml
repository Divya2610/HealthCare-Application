<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg"
android:gravity="center"
android:orientation="vertical"
>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        android:background="@drawable/custom_edittext">


    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:text="Dr.Vikram Singh (MD)"
        android:textAlignment="center"
        android:textColor="@color/greenx"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:text=" - Specialty:Pediatrics"
        android:textAlignment="center"
        android:textColor="@color/greenx"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="284dp"
        android:layout_height="214dp"
        android:text="Dr. Vikram Singh is a highly respected pediatrician known for his dedication to children's health and well-being,earned his MD in Pediatrics from Maulana Azad Medical College, New Delhi. With over 25 years of experience, Dr. Singh has expertise in managing various pediatric conditions ranging from common childhood illnesses to complex developmental disorders."
        android:textAlignment="center"
        android:textColor="@color/greenx"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>